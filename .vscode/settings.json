{
  "angular-schematics.schematicsDefaultOptions": {
    "angular-*": {
      "externalTemplate": true,
      "style": "scss"
    },
    "angular-component": {
      "skipChangeDetectionOnPush": false
    }
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always"
  }
}
